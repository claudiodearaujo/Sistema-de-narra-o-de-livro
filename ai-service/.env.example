# Server Configuration
PORT=3001
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/ai_service?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/ai_service?schema=public"

# Redis (for BullMQ queues)
REDIS_URL="redis://localhost:6379"

# JWT Secret (same as backend for token validation)
JWT_SECRET="your-jwt-secret-here"

# API Key for service-to-service communication
AI_SERVICE_API_KEY="your-api-key-here"

# ElevenLabs Configuration
ELEVENLABS_API_KEY="your-elevenlabs-api-key"
ELEVENLABS_MODEL_ID="eleven_multilingual_v2"

# Google Gemini Configuration
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-1.5-pro"

# TTS Provider (elevenlabs | gemini)
TTS_PROVIDER="elevenlabs"

# Text Provider (gemini)
TEXT_PROVIDER="gemini"

# Image Provider (gemini)
IMAGE_PROVIDER="gemini"

# Storage Configuration
AUDIO_STORAGE_PATH="./storage/audio"
CACHE_STORAGE_PATH="./storage/cache"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"
