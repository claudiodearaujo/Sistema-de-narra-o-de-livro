# ==========================================
# CONFIGURAÇÕES DO SISTEMA DE NARRAÇÃO
# ==========================================

# Banco de dados PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/book_narration?schema=public"

# Porta do servidor
PORT=3000

# ==========================================
# GEMINI TTS - OBRIGATÓRIO
# ==========================================
# Obtenha sua chave em: https://aistudio.google.com/apikey
GEMINI_API_KEY="sua_chave_api_aqui"

# Modelo TTS do Gemini (padrão: gemini-2.5-flash-preview-tts)
# Opções: gemini-2.5-flash-preview-tts ou gemini-2.5-pro-preview-tts
GEMINI_TTS_MODEL="gemini-2.5-flash-preview-tts"

# ==========================================
# REDIS (OPCIONAL - para filas de processamento)
# ==========================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
