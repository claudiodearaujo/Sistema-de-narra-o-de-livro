{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "seed": "npx ts-node prisma/seed.ts",
    "postinstall": "npx prisma migrate deploy && npx prisma generate",
    "test": "npm run test:all",
    "test:all": "npm run test:middleware && npm run test:redis && npm run test:services && npm run test:ai",
    "test:middleware": "npx ts-node src/__tests__/middleware/role.middleware.test.ts && npx ts-node src/__tests__/middleware/plan-limits.middleware.test.ts",
    "test:middleware:role": "npx ts-node src/__tests__/middleware/role.middleware.test.ts",
    "test:middleware:plan": "npx ts-node src/__tests__/middleware/plan-limits.middleware.test.ts",
    "test:redis": "npx ts-node src/__tests__/lib/redis.test.ts",
    "test:services": "npm run test:auth && npm run test:books && npm run test:posts && npm run test:feed",
    "test:auth": "npx ts-node src/__tests__/services/auth.service.test.ts",
    "test:books": "npx ts-node src/__tests__/services/books.service.test.ts",
    "test:posts": "npx ts-node src/__tests__/services/post.service.test.ts",
    "test:feed": "npx ts-node src/__tests__/services/feed.service.test.ts",
    "test:ai": "npm run test:ai:token && npm run test:ai:api && npm run test:ai:routes && npm run test:ai:tts-contract",
    "test:ai:token": "npx ts-node src/__tests__/services/ai-token.service.test.ts",
    "test:ai:api": "npx ts-node src/__tests__/services/ai-api.service.test.ts",
    "test:ai:routes": "npx ts-node src/__tests__/routes/ai-api.routes.test.ts",
    "test:schema": "npx ts-node src/__tests__/schema/prisma-field-integrity.test.ts",
    "test:ai:bootstrap": "npx ts-node src/__tests__/ai/gemini-bootstrap.test.ts"
    "test:ai:tts-contract": "npx ts-node src/__tests__/ai/tts-provider.contract.test.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@elevenlabs/elevenlabs-js": "^2.34.0",
    "@google/genai": "^1.38.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.9",
    "axios": "^1.13.5",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.67.1",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^166.0.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "nodemon": "^3.1.11",
    "pg": "^8.17.2",
    "socket.io": "^4.8.3",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.16.0",
    "@types/socket.io": "^3.0.1",
    "prisma": "^7.3.0",
    "ts-node": "^10.9.2"
  }
}
